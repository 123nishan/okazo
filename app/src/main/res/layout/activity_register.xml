<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RegisterActivity">

<RelativeLayout
    android:layout_width="match_parent"

    android:background="@drawable/ic_register"
    android:layout_height="match_parent">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:id="@+id/back_to_login"
        android:layout_marginTop="60dp"
        android:background="@drawable/ic_down_arrow"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/register_icon"
        android:background="@drawable/ic_enter"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="35dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/register_icon"
        android:id="@+id/register_name_layout">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:drawableRight="@drawable/ic_name"
            android:id="@+id/register_name"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/register_email_layout"
        android:layout_marginTop="10dp"
      android:layout_below="@+id/register_name_layout"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_mail"
            android:id="@+id/register_email"
            android:hint="Email"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/register_password_layout"
        android:layout_below="@+id/register_email_layout"
        android:layout_marginLeft="50dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_lock"
            android:id="@+id/register_password"
            android:hint="Password"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/register_number_layout"
        android:layout_below="@+id/register_password_layout"
        android:layout_marginLeft="50dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_phone"
            android:drawableRight="@drawable/ic_phone"
            android:hint="Phone"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_button"
        android:layout_below="@+id/register_number_layout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"
        android:background="@color/cardview_dark_background"
        android:text="Submit"/>





</RelativeLayout>

</RelativeLayout>