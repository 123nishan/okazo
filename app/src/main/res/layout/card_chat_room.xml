<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_chat_room_card"
    android:layout_width="match_parent" android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"

   >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/card_chat_room_image"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/card_chat_room_time_layout"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/card_chat_room_image"
        android:orientation="vertical">
    <TextView
        android:layout_marginLeft="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_chat_room_sender"
        android:text="title"
        android:textStyle="bold"
        android:textSize="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="message"
            android:id="@+id/card_chat_room_message"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/card_chat_room_time_layout"

        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Time"
            android:id="@+id/card_chat_room_time"/>
            <Button
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:background="@drawable/round_button"
                android:text="1"
                android:layout_gravity="center"
                android:clickable="false"
                android:id="@+id/card_chat_room_unseen"/>

    </LinearLayout>

</RelativeLayout>
</androidx.cardview.widget.CardView>