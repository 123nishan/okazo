<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    >

<LinearLayout
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/card_admin_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title: "
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/card_admin_event_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail: "
        android:textSize="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/card_admin_event_start_date"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S.Date: "
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/card_admin_event_start_time"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S.Time: "
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/card_admin_event_end_date"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E.Date: "
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/card_admin_event_end_time"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E.Time: "
            android:textSize="15dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/card_admin_event_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location: "
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/card_admin_event_host_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Host Name: "
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/card_admin_event_host_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Host Number: "
        android:textSize="15dp"/>
    <Button
        android:textColor="@color/space_white"
        android:id="@+id/card_admin_event_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_button"/>

    <Button
        android:textColor="@color/space_white"
        android:id="@+id/card_admin_event_unblock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UnBlock"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_button"/>

</LinearLayout>
</androidx.cardview.widget.CardView>