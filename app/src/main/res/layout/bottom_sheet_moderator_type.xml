<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="5dp"

    android:layout_marginBottom="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/bottom_sheet_add_moderator_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginRight="30dp"
        android:background="@drawable/round_button"
        android:text="Editor"/>
    <Button
        android:id="@+id/bottom_sheet_add_moderator_moderator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moderator"
        android:layout_weight="0.5"
        android:background="@drawable/round_button"/>
    </LinearLayout>
    <TextView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Note: Editor has same authority as admin except cant kick admin\nModerator can't post any post, can reply to messages, cant add or remove memebers"/>
</LinearLayout>