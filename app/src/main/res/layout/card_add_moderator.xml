<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    android:elevation="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_weight="0.1"
        android:id="@+id/card_add_moderator_image"/>
        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/card_add_moderator_image"
            android:layout_weight="3.3"
            android:layout_toLeftOf="@+id/card_add_moderator_add_button"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/card_add_moderator_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:id="@+id/card_add_moderator_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Email"
                android:textSize="18dp"
                android:textColor="@color/colorPrimaryDark"/>
        </LinearLayout>
        <Button
            android:id="@+id/card_add_moderator_add_button"

            android:layout_width="80dp"
            android:drawableLeft="@drawable/ic_add_moderator"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentEnd="true"
            android:text="Add"
            android:layout_height="50dp"
            android:background="@drawable/round_button"
            android:layout_gravity="end"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/card_add_moderator_status"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
         android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="Pending Request"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>