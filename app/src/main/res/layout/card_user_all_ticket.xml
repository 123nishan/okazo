<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="6dp"

    android:background="@drawable/ticket_layout_round"
    android:layout_marginBottom="6dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/card_user_all_ticket_name"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textStyle="bold"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/card_user_all_ticket_price"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="price "
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:gravity="end|center_vertical"
        android:orientation="horizontal">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/card_user_all_ticket_sub"
            android:layout_marginRight="12dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_substract"
            />
        <TextView
            android:id="@+id/card_user_all_ticket_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginRight="12dp"
            android:text="1"
            android:textSize="16dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginRight="60dp"
            android:id="@+id/card_user_all_ticket_add"

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_add_quantity"
            />
    </LinearLayout>

</LinearLayout>